<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <savedcards>
                <active>0</active>
                <model>SavedCardsFacadeAdapter</model>
                <title>Saved Credit Card Payment</title>
                <show_logo>0</show_logo>
                <ccfields>card_holder_name,card_cvn,card_expiry_date,card_number</ccfields>
                <payment_action>authorize</payment_action>
                <order_status>pending</order_status>
                <cctypes>AE,VI,MC,DI,JCB</cctypes>
                <useccv>1</useccv>
                <allowspecific>0</allowspecific>
                <cvc_check>Disable</cvc_check>
                <can_initialize>0</can_initialize>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>1</can_capture_partial>
                <can_void>1</can_void>
                <can_refund>1</can_refund>
                <debug>0</debug>
                <hide_cc_info>0</hide_cc_info>
                <cc_wipe_button>0</cc_wipe_button>
                <cc_info_backend>0</cc_info_backend>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_use_internal>1</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <instructions>please enter your card details and will charge you later.</instructions>
                <paymentInfoKeys>card_holder_name,card_number,cc_type,card_expiry_date</paymentInfoKeys>
            </savedcards>
        </payment>
    </default>
</config>
