<?php /** @var \Plumrocket\Amp\Block\Widget\Slider $block */ ?>
<?php if ($block->hasEnabledSlides()) : ?>
<div class="pramp-slider">
    <amp-carousel
      height="<?= $block->getImageHeight() ?>"
      width="<?= $block->getImageWidth() ?>"
      layout="responsive"
      type="slides"
      autoplay delay="5000"
    >
        <?php foreach ($block->getSlides() as $slide) : ?>
            <?php if ($slide['banner_url']) : ?>
            <a href="<?= $slide['banner_url'] ?>" <?= $slide['url_blank'] ? 'target="_blank"' : '' ?>
               title="<?= __('Link for: %1', $slide['image_alt']) ?>">
                <?= $block->getImageHtml($slide) ?>
            </a>
            <?php else : ?>
                <?= $block->getImageHtml($slide) ?>
            <?php endif; ?>
        <?php endforeach; ?>
    </amp-carousel>
</div>
<?php endif; ?>
