<operations xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="urn:magento:mftf:DataGenerator/etc/dataOperation.xsd">

    <operation name="CreateISTestCategory" dataType="ISTestCategory" type="create" auth="adminOauth"
               url="/V1/categories" method="POST">
        <contentType>application/json</contentType>
        <object key="category" dataType="ISTestCategory">
            <field key="parent_id">integer</field>
            <field key="name">string</field>
            <field key="is_active">boolean</field>
            <field key="include_in_menu">boolean</field>
            <array key="custom_attributes">
                <value>attribute_code</value>
            </array>
        </object>
    </operation>

    <operation name="DeleteISTestCategory" dataType="ISTestCategory" type="delete" auth="adminOauth"
               url="/V1/categories/{id}" method="DELETE">
        <contentType>application/json</contentType>
    </operation>

    <operation name="CreateISCategoryAttributeCode" dataType="attribute_code" type="create">
        <field key="attribute_code">string</field>
        <field key="value">string</field>
    </operation>

</operations>
