<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Social Accounts</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="WeltPixel\SocialLogin\Block\Account\SocialAccounts"
                   name="socialaccounts"
                   template="WeltPixel_SocialLogin::account/social-accounts.phtml"
                   cacheable="false"
            />
        </referenceContainer>
    </body>
</page>