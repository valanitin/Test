<?php
/** @var \Plumrocket\Amp\Block\Page\Share $block */
$shareButtons = $block->getActiveShareButtons();
$width = $block->getShareButtonWidth() ? $this->getShareButtonWidth() : 44;
$height = $block->getShareButtonHeight() ? $this->getShareButtonHeight() : 30;
?>

<?php if (! empty($shareButtons)) : ?>
<div class="sharing-conttainer">
    <div class="title"><?php echo __('Share with friends') ?></div>
    <div class="buttons">
        <?php foreach ($shareButtons as $type => $params) : ?>
            <amp-social-share
                width="<?php echo $width ?>"
                height="<?php echo $height ?>"
                layout="flex-item"
                class="amp-social-share-<?php echo $type ?>"
                type="<?php echo $type ?>"
                aria-label="<?= $type ?>"
                <?php foreach ($params as $key => $param) : ?>
                    <?php echo $key ?>="<?php echo $param['value'] ?>"
                <?php endforeach; ?>
            ></amp-social-share>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
