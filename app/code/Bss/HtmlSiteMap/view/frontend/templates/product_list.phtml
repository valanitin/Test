/**
 * SEO Toolbar template
 *
 * @var $block Bss\HtmlSiteMap\Block\ProductCollection
 */
?>
<?php
$helper = $block->getHelper();

//Product Link
$enableProduct = $helper->isEnableProduct();
$titleProduct = $helper->titleProduct();

if ($enableProduct) : ?>
    <h2 class="bss_h2"><?php echo $titleProduct; ?></h2>
    <div class="bss_site_map_grid">
        <?php
        $productCollection = $block->getProductCollection();
        foreach ($productCollection as $product) {
            echo $product->getData("id");
            echo '<div class="col-bss-3">
                    <h3 class="bss_product_list">
                    <a href="'.$product->getUrlModel()->getUrl($product).'"
                    title = "'.$product->getName().'">'.$product->getName().'</a>
                    </h3>
                </div>';
        }
        ?>
    </div>
    <?php
endif; ?>