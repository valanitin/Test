<?php /** @var \Plumrocket\Amp\Block\Widget\Video $block */ ?>

<div class="pramp-widget-video">
    <?php if ('' !== (string)$block->getTitle()) : ?>
      <h3 class="mtop"><?php /* @escapeNotVerified */ echo $block->getTitle(); ?></h3>
    <?php endif; ?>
    <?php if ($block->getVideoId()) : ?>
        <amp-<?php echo $block->getVideoType() ?>
            data-videoid="<?php echo $block->getVideoId() ?>"
            width="<?php echo $block->getVideoWidth() ?>"
            height="<?php echo $block->getVideoHeight() ?>"
            layout="responsive"
            <?php echo $block->getVideoAutoPlay() ? 'autoplay' : '' ?>
        >
        </amp-<?php echo $block->getVideoType() ?>>
    <?php elseif (\Plumrocket\Amp\Helper\Video::VIDEO_TYPE_VIDEO === $block->getVideoType()) : ?>
        <amp-video width="<?php echo $block->getVideoWidth() ?>"
                   height="<?php echo $block->getVideoHeight() ?>"
                   src="<?php echo $block->getVideoSrc() ?>"
                   layout="responsive"
                   controls>
          <div fallback>
            <p>Your browser doesn't support HTML5 video.</p>
          </div>
        </amp-video>
    <?php endif; ?>
</div>