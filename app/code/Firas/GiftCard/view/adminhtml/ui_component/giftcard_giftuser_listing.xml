    <columns name="giftcard_giftuser_columns">
        <!-- The list of columns -->
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">giftuserid</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="from_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">From</item>
                </item>
            </argument>
        </column>        
        <column name="to_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                     <item name="filter" xsi:type="string">text</item> 
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">To</item>
                </item>
            </argument>
        </column>
        <column name="code">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                     <item name="sorting" xsi:type="string">asc</item> 
                    <item name="label" xsi:type="string" translate="true">Gift Code</item>
                </item>
            </argument>
        </column>
        <column name="order_id" class="Firas\GiftCard\Ui\Component\Listing\Columns\Order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Firas_GiftCard/js/grid/columns/link</item>
                    <item name="filter" xsi:type="string">text</item>
                     <item name="sorting" xsi:type="string">asc</item> 
                    <item name="label" xsi:type="string" translate="true">Order Id</item>
                </item>
            </argument>
        </column>
        <column name="price" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Price</item>
                </item>
            </argument>
        </column>
        <column name="remaining_amt" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Left Amount</item>
                </item>
            </argument>
        </column>
        <column name="alloted">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                     <item name="sorting" xsi:type="string">desc</item> 
                    <item name="label" xsi:type="string" translate="true">Order Time</item>
                </item>
            </argument>
        </column>                                
        <column name="expiry" class="Firas\GiftCard\Ui\Component\Listing\Columns\ExpiryDate">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Expiry Time</item>
                </item>
            </argument>
        </column>                                
        <column name="is_active" class="Firas\GiftCard\Ui\Component\Listing\Columns\IsActive">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                     <item name="sortable" xsi:type="boolean">false</item>
                    <item name="component" xsi:type="string">Firas_GiftCard/js/grid/columns/link</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                </item>
            </argument>
        </column>                                
        <column name="is_expire" class="Firas\GiftCard\Ui\Component\Listing\Columns\IsExpire">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                     <item name="sortable" xsi:type="boolean">false</item>
                    <item name="component" xsi:type="string">Firas_GiftCard/js/grid/columns/link</item>
                    <item name="label" xsi:type="string" translate="true">Is Active</item>
                </item>
            </argument>
        </column>                                
    </columns>
</listing>