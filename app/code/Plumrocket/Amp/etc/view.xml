<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="amp_category_page_list" type="small_image">
                <width>600</width>
                <height>750</height>
            </image>
            <image id="amp_category_page_grid" type="small_image">
                <width>400</width>
                <height>500</height>
            </image>
            <image id="pr_amp_sliders" type="small_image">
                <width>500</width>
                <height>500</height>
            </image>
            <!-- For product page -->
            <image id="product_page_image_large" type="image">
                <width>700</width>
                <height>560</height>
            </image>
            <!-- Used when theme don't have this id -->
            <image id="product_page_image_medium" type="image">
                <width>500</width>
                <height>500</height>
            </image>
        </images>
    </media>
</view>
